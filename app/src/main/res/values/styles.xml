<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textCursorDrawable">@drawable/cursor_color</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ScrollViewStyle">
        <item name="android:scrollbars">none</item>
        <item name="android:layout_margin">@dimen/margins</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxBackgroundMode">none</item>
        <item name="hintEnabled">false</item>
        <item name="android:padding">1dp</item>
        <item name="errorIconTint">@android:color/transparent</item>
    </style>

    <style name="TitleTextInputEditTextStyle">
        <item name="android:inputType">
            textAutoCorrect|textPersonName|textCapSentences|textAutoComplete|textMultiLine
        </item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:color">?android:attr/textColorPrimary</item>
    </style>

    <style name="BodyTextInputEditTextStyle">
        <item name="android:inputType">
            textLongMessage|textAutoCorrect|textMultiLine|textPersonName|textCapSentences|textAutoComplete
        </item>
        <item name="android:singleLine">false</item>
        <item name="android:gravity">start|top</item>
        <item name="android:color">?android:attr/textColorPrimary</item>
    </style>

    <style name="FabStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_anchorGravity">bottom|right</item>
        <item name="tint">@color/fabIcon</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:color">?android:attr/textColorPrimary</item>
    </style>

    <style name="StrokedTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorAccent</item>

        <item name="hintTextColor">@color/colorAccent</item>
        <item name="android:ems">10</item>
    </style>
</resources>
